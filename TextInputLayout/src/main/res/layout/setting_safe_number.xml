<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/setting_safe_number_dialog_title"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/dialog_number_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/setting_safe_number_dialog_content_hint"
        android:inputType="number|phone" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="14dp"
        android:layout_toStartOf="@+id/textView2"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/setting_safe_number_dialog_content"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/dialog_safe_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_below="@+id/dialog_number_content"
        android:layout_marginTop="37dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/setting_safe_number_dialog_cancel"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialog_safe_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dialog_safe_cancel"
        android:layout_marginStart="33dp"
        android:layout_toEndOf="@+id/textView2"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/setting_safe_number_dialog_ensure"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

</RelativeLayout>